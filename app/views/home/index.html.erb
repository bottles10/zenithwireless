<section class="relative flex flex-col items-center justify-end h-screen w-full">
  <!-- Background video -->
  <div class="absolute inset-0 overflow-hidden">
    <%= video_tag "personal-hero-film.mp4",
          autoplay: true,
          muted: true,
          loop: false,
          playsinline: true,
          preload: "metadata",
          class: "h-full w-full object-cover" %>
  </div>
  <!-- Dark overlay -->
 <div class="absolute bottom-0 left-0 w-full h-1/3
              bg-gradient-to-t
              from-slate-950 via-slate-950/40 to-transparent
              pointer-events-none">
  </div>

  <!-- Hero content -->
  <div class="relative z-10 p-12 flex flex-col items-center justify-end h-full ">
    <div class=" mx-auto max-w-6xl px-6 text-white">
      <h1 class="text-xl md:text-3xl tracking-tight">
        A <strong class="bg-clip-text text-transparent font-light bg-gradient-to-r from-purple-500 via-purple-400 to-purple-100">new era of internet</strong> is coming.
      </h1>
    </div>
  </div>
</section>
<!-- -----------------End of Hero section------------------ --> 

