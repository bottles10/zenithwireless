<section class="relative flex flex-col items-center justify-end h-screen w-full bg-[#0f141a]">
  <!-- Background video -->
  <div class="absolute inset-0 overflow-hidden">
    <%= video_tag "personal-hero-film.mp4",
          autoplay: true,
          muted: true,
          loop: false,
          playsinline: true,
          preload: "metadata",
          class: "h-full w-full object-cover" %>
  </div>
  <!-- Dark overlay -->
 <div class="absolute bottom-0 left-0 w-full h-1/3
              bg-linear-to-t
              from-slate-950 via-slate-950/40 to-transparent
              pointer-events-none">
  </div>

  <!-- Hero content -->
  <div class="relative z-10 p-12 flex flex-col items-center justify-end h-full ">
    <div class=" mx-auto max-w-6xl px-6 text-white">
