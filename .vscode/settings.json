{
    "files.autoSave": "afterDelay",
    "emmet.includeLanguages": {
        "ruby": "html",
        "erb": "html"
    },
    "tailwindCSS.includeLanguages": {
        "erb": "html",
        "ruby": "html"
    },
    "files.associations": {
        "*.html.erb": "erb"
    },
    "erbFormatter.indentSize": 2,
    "erbFormatter.useTabs": false,
    "erbFormatter.preserveBlankLines": true,
    "erbFormatter.logLevel": "none"
    
}